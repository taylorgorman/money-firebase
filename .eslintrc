{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // Spacing
    "object-curly-spacing": ["error", "always"],
    "space-in-parens": ["error", "always"],
    "space-unary-ops": ["error", {
      "nonwords": true
    }],
    "react/jsx-curly-spacing": ["error", {
      "when": "always",
      "children": true
    }],
    // React
    "react/react-in-jsx-scope": "off",
    // Other
    "semi": ["error", "never"]
  }
}
